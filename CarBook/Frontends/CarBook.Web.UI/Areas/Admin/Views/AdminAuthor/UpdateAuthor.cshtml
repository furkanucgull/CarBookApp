@model UpdateAuthorDto
@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Update New Author</h4>
                        <p class="card-subtitle mb-4">You can update Authors  here.</p>
                        <form method="post">
                            <input type="hidden" asp-for="AuthorID" />
                            <div class="form-group">
                                <label for="exampleInputName">Author Title</label>
                                <input type="text" asp-for="Name" id="exampleInputName" />
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Author Description</label>
                                <input type="text" asp-for="Description" id="exampleInputName" />
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Author ImageUrl</label>
                                <input type="text" asp-for="ImageUrl" id="exampleInputName" />
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

