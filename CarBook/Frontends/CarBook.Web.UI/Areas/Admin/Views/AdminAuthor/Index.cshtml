@model List<ResultAuthorDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Car Author Lists</h4>
                        <p class="card-subtitle mb-4">
                            Adding new Authors
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Image</th>
                                        <th>Remove</th>
                                        <th>Update</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;

                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Name</td>
                                            <td>@item.Description</td>
                                            <td> <img src="@item.ImageUrl" width="50" height="50" /></td>
                                            <td><a asp-area="Admin" asp-action="RemoveAuthor" asp-controller="AdminAuthor" asp-route-id="@item.AuthorID" class="btn btn-outline-danger">Remove</a></td>
                                            <td><a asp-area="Admin" asp-action="UpdateAuthor" asp-controller="AdminAuthor" asp-route-id="@item.AuthorID" class="btn btn-outline-success">Update</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <td><a asp-action="CreateAuthor" asp-controller="AdminAuthor" class="btn btn-outline-primary">Create New Author</a></td>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

