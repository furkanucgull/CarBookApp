@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Create New Category</h4>
                        <p class="card-subtitle mb-4">You can add any additional Categorys from here.</p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Category Name</label>
                                <input type="text" asp-for="Name" id="exampleInputName" placeholder="Add Category" />
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>
            </div>
        </div>
    </div>
</div>

