@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Car Testimonial Lists</h4>
                        <p class="card-subtitle mb-4">
                            Adding new Testimonials
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Name</th>
                                        <th>Comment</th>
                                        <th>ImageURL</th>
                                        <th>Delete</th>
                                        <th>Create</th>
                                        <th>Update</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;

                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Name</td>
                                            <td>@item.Comment</td>
                                            <td>@item.ImageUrl</td>
                                            <td><a asp-area="Admin" asp-action="RemoveTestimonial" asp-controller="AdminTestimonial" asp-route-id="@item.TestimonialID" class="btn btn-outline-danger">Remove</a></td>
                                            <td><a asp-area="Admin" asp-action="UpdateTestimonial" asp-controller="AdminTestimonial" asp-route-id="@item.TestimonialID" class="btn btn-outline-success">Update</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <td><a asp-action="CreateTestimonial" asp-controller="AdminTestimonial" class="btn btn-outline-primary">Create New Testimonial</a></td>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

