@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Create New About</h4>
                        <p class="card-subtitle mb-4">You can add any additional Abouts from here.</p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">About Title</label>
                                <input type="text" asp-for="title" id="exampleInputName"  />
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">About Description</label>
                                <input type="text" asp-for="description" id="exampleInputName"  />
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">About VideoUrl</label>
                                <input type="text" asp-for="imageUrl" id="exampleInputName"  />
                            </div>
                         
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </form>

                    </div> 
                </div>
            </div>
        </div>
    </div>
</div>

