@model List<CarBook.Dto.BannerDtos.ResultBannerDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Car Banner Lists</h4>
                        <p class="card-subtitle mb-4">
                            Adding new Banners
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Video Description</th>
                                        <th>Video URL</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;

                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Title</td>
                                            <td>@item.Description</td>
                                            <td>@item.VideoDescription</td>
                                            <td>@item.VideoUrl</td>
                                            <td><a asp-area="Admin"  asp-action="RemoveBanner" asp-controller="AdminBanner" asp-route-id="@item.BannerID" class="btn btn-outline-danger">Remove</a></td>
                                            <td><a asp-area="Admin" asp-action="UpdateBanner" asp-controller="AdminBanner" asp-route-id="@item.BannerID" class="btn btn-outline-success">Update</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <td><a asp-action="CreateBanner" asp-controller="AdminBanner" class="btn btn-outline-primary">Create New Banner</a></td>

                        </div>

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
            <!-- end col -->
        </div>
        <!-- end page title -->

    </div> <!-- container-fluid -->
</div>

