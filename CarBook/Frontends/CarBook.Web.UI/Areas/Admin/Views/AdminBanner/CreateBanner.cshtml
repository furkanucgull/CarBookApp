@model CreateBannerDto
@{
    ViewData["Title"] = "CreateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Create New Banner</h4>
                        <p class="card-subtitle mb-4">You can add any additional Banners from here.</p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputName">Banner Title</label>
                                <input type="text" asp-for="Title" id="exampleInputName" placeholder="Add Banner" />
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Banner Description</label>
                                <input type="text" asp-for="Description" id="exampleInputName" placeholder="Add Banner" />
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Banner VideoUrl</label>
                                <input type="text" asp-for="VideoUrl" id="exampleInputName" placeholder="Add Banner" />
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName">Banner Video Description</label>
                                <input type="text" asp-for="VideoDescription" id="exampleInputName" placeholder="Add Banner" />
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>
            </div>
        </div>
    </div>
</div>

