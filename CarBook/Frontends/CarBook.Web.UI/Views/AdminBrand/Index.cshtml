@model List<ResultBrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Car Brand Lists</h4>
                        <p class="card-subtitle mb-4">
                            Adding new Brands
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Brand</th>
                                        <th>Delete</th>
                                        <th>Update</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;

                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Name</td>
                                            <td><a asp-action="RemoveBrand" asp-controller="AdminBrand" asp-route-id="@item.BrandID" class="btn btn-outline-danger">Remove</a></td>
                                            <td><a asp-action="UpdateBrand" asp-controller="AdminBrand" asp-route-id="@item.BrandID" class="btn btn-outline-success">Update</a></td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <td><a asp-action="CreateBrand" asp-controller="AdminBrand" class="btn btn-outline-primary">Create New Brand</a></td>

                        </div>

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
            <!-- end col -->
        </div>
        <!-- end page title -->

    </div> <!-- container-fluid -->
</div>

