@model UpdateBrandDto
@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Update New Brand</h4>
                        <p class="card-subtitle mb-4">You can update Brands  here.</p>
                        <form method="post">
                            <input type="hidden" asp-for="BrandID" />
                            <div class="form-group">
                                <label for="exampleInputName">Brand Name</label>
                                <input type="text" asp-for="Name" id="exampleInputName" placeholder="Update Brand" />
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

