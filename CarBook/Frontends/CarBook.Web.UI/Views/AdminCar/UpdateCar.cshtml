@model UpdateCarDto
@{
    ViewData["Title"] = "UptadeCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">

                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Update Car</h4>
                        <p class="card-subtitle mb-4">It is important to fill the basic informations about the car. After you filled the inputs you can click Save button to end the process.</p>
                        <form method="post" >
                            <input type="hidden" asp-for="CarID" />
                            <div class="form-group">
                                <label for="exampleInputBrand">Brand</label>
                                @Html.DropDownListFor(x => x.BrandID, (List<SelectListItem>)ViewBag.BrandValues, new { @class = "form-control" })

                                <small id="emailHelp" class="form-text text-muted">Pick your brand.</small>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputModel">Model</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Model" placeholder="Enter the Model of the Car ">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputKm">Km</label>
                                <input type="text" class="form-control" id="exampleInputKm" asp-for="Km" placeholder="Enter Kilometers ">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTransmission">Transmission</label>
                                <input type="text" class="form-control" id="exampleInputTransmission" asp-for="Transmission" placeholder="Enter Transmission Type ">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputSeat">Seat </label>
                                <input type="number" class="form-control" id="exampleInputSeat" asp-for="Seat" placeholder="Enter Seat Pieces">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputLuggage">Luggage </label>
                                <input type="number" class="form-control" id="exampleInputLuggage" asp-for="Luggage" placeholder="Enter Luggage Capacity">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputFuelType">Fuel Type</label>
                                <input type="text" class="form-control" id="exampleInputFuelType" asp-for="Fuel" placeholder="Enter Fuel Type">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputCoverImage">Cover Image</label>
                                <input type="text" class="form-control" id="exampleInputCoverImage" asp-for="CoverImageUrl" placeholder="Enter Cover Image Url">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputBigImage">Big Image</label>
                                <input type="text" class="form-control" id="exampleInputBigImage" asp-for="BigImageUrl" placeholder="Enter Big Image Url">
                            </div>
                            <div class="form-group mb-3">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="checkmeout0">
                                    <label class="custom-control-label" for="checkmeout0">Check me out !</label>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                        </form>

                    </div> <!-- end card-body-->
                </div>
            </div>
        </div>
    </div>
</div>
